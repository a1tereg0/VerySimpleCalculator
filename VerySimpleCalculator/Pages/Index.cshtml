@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<form asp-action="/index" method="post">
    <div class="form-group">
        <input type="number" name="value1" id="number1" />
    </div>
    <div class="form-group">
        <select name="operation" id="operation">
            <option value="add" selected>Addition</option>
            <option value="sub">Substraction</option>
            <option value="mul">Multiplication</option>
            <option value="div">Division</option>
        </select>
    </div>
    <div class="form-group">
        <input type="number" name="value2" id="number2" />
    </div>
    <input type="submit" class="btn btn-outline-dark" value="Calculate" id="calculate" />
</form>

@if (Model.ResultIsSet)
{
    <p class="display-4">
        Result is: <output id="result">@Model.Result</output>
    </p>
}

